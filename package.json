{
  "name": "auth-microservice",
  "version": "0.1.0",
  "description": "Authentication microservice for EduCore AI platform",
  "main": "src/backend/app.js",
  "scripts": {
    "dev:backend": "nodemon src/backend/app.js",
    "dev:frontend": "cd src/frontend && npm run dev",
    "start:backend": "node src/backend/app.js",
    "start:frontend": "cd src/frontend && npm run build && npm run preview",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "format": "prettier --write \"**/*.{js,jsx,json,md}\"",
    "migrate": "node scripts/migrate.js",
    "seed": "node scripts/seed.js",
    "generate-keys": "node scripts/generate-keys.js",
    "init-database": "node scripts/init-database.js"
  },
  "keywords": [
    "authentication",
    "oauth",
    "jwt",
    "microservice"
  ],
  "author": "EduCore AI",
  "license": "PROPRIETARY",
  "dependencies": {
    "express": "^4.18.2",
    "jsonwebtoken": "^9.0.2",
    "openid-client": "^5.6.5",
    "mongodb": "^6.3.0",
    "axios": "^1.6.2",
    "cookie-parser": "^1.4.6",
    "helmet": "^7.1.0",
    "express-rate-limit": "^7.1.5",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "speakeasy": "^2.0.0",
    "qrcode": "^1.5.3",
    "joi": "^17.11.0",
    "winston": "^3.11.0"
  },
  "devDependencies": {
    "nodemon": "^3.0.2",
    "jest": "^29.7.0",
    "supertest": "^6.3.3",
    "eslint": "^8.55.0",
    "prettier": "^3.1.1"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}

